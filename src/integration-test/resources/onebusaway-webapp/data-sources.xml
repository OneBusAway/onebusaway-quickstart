<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <import resource="file:${onebusaway_prefix}/src/integration-test/resources/data-sources-common.xml" />
    <import resource="file:${onebusaway_prefix}/src/integration-test/resources/data-sources-users-common.xml" />
    <import resource="file:${onebusaway_prefix}/src/integration-test/resources/data-sources-users-extended.xml" />

    <bean id="wikiDocumentService" class="org.onebusaway.wiki.file.FileWikiDocumentServiceImpl">
        <property name="documentDirectory" value="${onebusaway_prefix}/src/integration-test/resources/wiki"/>
    </bean>

    <bean id="wikiRenderingService" class="org.onebusaway.wiki.xwiki.impl.XWikiRenderingServiceImpl">
        <property name="wikiDocumentViewUrl" value="/onebusaway-webapp/p/%{documentName}.action" />
        <property name="wikiAttachmentUrl" value="http://wiki.onebusaway.org/bin/download/Main/%{documentName}/%{attachmentName}" />
    </bean>

    <bean class="org.onebusaway.container.spring.PropertyOverrideConfigurer">
        <property name="properties">
            <props>
                <prop key="cacheManager.cacheManagerName">org.onebusaway.webapp.cacheManager</prop>
            </props>
        </property>
    </bean>

</beans>