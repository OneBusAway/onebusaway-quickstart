<!-- 
  This is a maven-assembly-plugin descriptor, which creates an executable WAR that includes both onebusaway-api-webapp
  and onebusaway-webpap.    
-->
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>webapp</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <componentDescriptors>
    <componentDescriptor>src/main/assembly/assembly-common.xml</componentDescriptor>
  </componentDescriptors>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.onebusaway:onebusaway-webapp:war</include>
        <include>org.onebusaway:onebusaway-api-webapp:war</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <unpackOptions>
        <excludes>
          <exclude>WEB-INF/web.xml</exclude>
          <exclude>WEB-INF/classes/data-sources*.xml</exclude>
          <exclude>WEB-INF/classes/struts.xml</exclude>
          <exclude>WEB-INF/lib/commons-cli*.jar</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/assembly/onebusaway-quickstart-webapp</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>  
</assembly>
